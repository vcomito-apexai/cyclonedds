set(QNX_HOST "$ENV{QNX_HOST}")
set(QNX_TARGET "$ENV{QNX_TARGET}")

set(QNX TRUE)
set(CMAKE_SYSTEM_NAME QNX)
set(CMAKE_C_COMPILER ${QNX_HOST}/usr/bin/qcc)
set(CMAKE_CXX_COMPILER ${QNX_HOST}/usr/bin/qcc)
set(CMAKE_CXX_COMPILER_ID "QCC")
set(CMAKE_C_STANDARD 11)
set(CMAKE_CXX_STANDARD 17)
set(CMAKE_AR "${QNX_HOST}/usr/bin/ntoaarch64-ar${HOST_EXECUTABLE_SUFFIX}" CACHE PATH "archiver")
set(CMAKE_RANLIB "${QNX_HOST}/usr/bin/ntoaarch64-ranlib${HOST_EXECUTABLE_SUFFIX}" CACHE PATH "ranlib")
set(THREADS_PTHREAD_ARG 0)
set(CMAKE_SYSTEM_PROCESSOR aarch64)
set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} -Vgcc_ntoaarch64le -DQNX -DQNX710 ${EXTRA_CMAKE_C_FLAGS}")

set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -Vgcc_ntoaarch64le -DQNX -DQNX710 ${EXTRA_CMAKE_CXX_FLAGS}")